@using System.Collections.Generic
@using Microsoft.AspNetCore.Http

@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!-- Log In page -->
<div class="container-md">
    <div class="row vh-100 d-flex justify-content-center">
        <div class="col-12 align-self-center">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4 mx-auto">
                        <div class="card">
                            <div class="card-body p-0 auth-header-box">
                                <div class="text-center p-3">
                                    <a href="#" class="logo logo-admin">
                                        <img src="~/images/rff-logo.png" height="50" alt="logo" class="auth-logo">
                                    </a>
                                    <h4 class="mt-3 mb-1 fw-semibold text-white font-18">Reaching Family Food Bank</h4>   
                                </div>
                            </div>
                            <div class="card-body pt-0">                                    
                                <form class="my-4" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">            
                                    <div class="form-group mb-2">
                                        <label class="form-label" asp-for="Email"></label>
                                        <input type="email" class="form-control" asp-for="Email" autocomplete="off">                               
                                    </div><!--end form-group--> 
            
                                    <div class="form-group">
                                        <label class="form-label" asp-for="Password"></label>                                            
                                        <input type="password" class="form-control" asp-for=Password autocomplete="off">                            
                                    </div><!--end form-group--> 
                        
                                    <div class="form-group mb-0 row">
                                        <div class="col-12">
                                            <div class="d-grid mt-3">
                                                <button class="btn btn-primary" type="submit">Log In <i class="fas fa-sign-in-alt ms-1"></i></button>
                                            </div>
                                        </div><!--end col--> 
                                    </div> <!--end form-group-->                           
                                </form><!--end form-->
                                
                            </div><!--end card-body-->
                        </div><!--end card-->
                    </div><!--end col-->
                </div><!--end row-->
            </div><!--end card-body-->
        </div><!--end col-->
    </div><!--end row-->
</div><!--end container-->