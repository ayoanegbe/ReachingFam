@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

    string source = (string)ViewData["source"];

}

<div class="container-md">
    <div class="row vh-100 d-flex justify-content-center">
        <div class="col-12 align-self-center">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4 mx-auto">
                        <div class="card">
                            <div class="card-body p-0 auth-header-box">
                                <div class="text-center p-3">
                                    <a href="#" class="logo logo-admin">
                                        <img src="~/images/rff-logo.png" height="50" alt="logo" class="auth-logo">
                                    </a>
                                    <h4 class="mt-3 mb-1 fw-semibold text-white font-18">Reaching Family Food Bank</h4>   
                                </div>
                            </div>
                            <div class="card-body pt-0">                                    
                                <form class="my-4"  asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" asp-route-source="@ViewData["source"]" method="post">            
                                    <div class="form-group mb-2">
                                        <label class="form-label" asp-for="FirstName"></label>
                                        <input type="text" class="form-control" asp-for=FirstName placeholder="User's first name">                               
                                    </div><!--end form-group--> 

                                    <div class="form-group mb-2">
                                        <label class="form-label" asp-for="LastName"></label>
                                        <input type="text" class="form-control" asp-for=LastName placeholder="User's last mame">                               
                                    </div><!--end form-group--> 

                                    <div class="form-group mb-2">
                                        <label class="form-label" asp-for="Email"></label>
                                        <input type="email" class="form-control" asp-for=Email placeholder="User's email">                               
                                    </div><!--end form-group--> 
                                    
                                    <div class="form-group mb-2">
                                        <label class="form-label" asp-for="Phone"></label>
                                        <input type="phonenumber" class="form-control" asp-for=Phone placeholder="User's phone">                               
                                    </div><!--end form-group-->

                                    <div class="form-group mb-2">
                                        <label class="form-label" asp-for="Password"></label>                                            
                                        <input type="password" class="form-control" asp-for=Password placeholder="Enter password" autocomplete="off">                            
                                    </div><!--end form-group--> 

                                    <div class="form-group mb-2">
                                        <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>                                            
                                        <input type="password" class="form-control" asp-for=ConfirmPassword placeholder="Enter Confirm password" autocomplete="off">                            
                                    </div><!--end form-group--> 
            
                                    <div class="form-group mb-0 row">
                                        <div class="col-12">
                                            <div class="d-grid mt-3">
                                                <button class="btn btn-primary" type="submit">Register <i class="fas fa-sign-in-alt ms-1"></i></button>
                                                <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                                            </div>
                                        </div><!--end col--> 
                                    </div> <!--end form-group-->                           
                                </form><!--end form-->
                                
                            </div><!--end card-body-->
                        </div><!--end card-->
                    </div><!--end col-->
                </div><!--end row-->
            </div><!--end card-body-->
        </div><!--end col-->
    </div><!--end row-->
</div><!--end container-->