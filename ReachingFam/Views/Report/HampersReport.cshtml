@model HamperReportViewModel

@{
    ViewData["Title"] = "Family Hampers Report";
    int i = 1;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="float-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Analytics</a></li>
                        <li class="breadcrumb-item active">Family Hampers</li>
                    </ol>
                </div>
                <h4 class="page-title">Family Hampers Report</h4>
            </div>
            <!--end page-title-box-->
        </div>
        <!--end col-->
    </div>
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card">
                <div class="card-body invoice-head">
                    <div class="row">
                        <div class="col-md-6 align-self-center">
                            <img src="~/images/rff-logo.png" alt="logo-small" class="logo-sm me-1" height="24">
                            <img src="~/images/rff-logo-dark.png" alt="" class="logo-lg brand-dark" height="30">
                            <h3 class="mt-2 mb-0">Family Hampers Report</h3>
                        </div><!--end col-->                       
                    </div><!--end row-->
                </div>
                <div class="card-body">
                    <div class="row row-cols-3 d-flex justify-content-md-between">
                        <div class="col-md-3 d-print-flex">
                            <div class="">
                                <h6 class="mb-0"><b>Report Date :</b> @DateTime.Today.ToString("dd-MMM-yyyy")</h6>
                            </div>
                        </div><!--end col-->
                        
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive project-invoice">
                                <table class="table table-bordered mb-0">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Hamper Weight</th>
                                            <th>Seniors</th>
                                            <th>Adults</th>
                                            <th>Children</th>
                                        </tr><!--end tr-->
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.HampersCollection)
                                        {
                                            <tr>
                                                <td>@(i++)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Family.FullName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Weight)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Seniors)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Adults)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Children)</td>
                                            </tr>

                                            <!--end tr-->
                                        }
                                        <tr>
                                            <td colspan="1" class="border-0"></td>
                                            <td class="border-0 font-14 text-dark">Hamper Total</td>
                                            <td class="border-0 font-14 text-dark">@Model.TotalHamperWeight lbs</td>
                                            <td class="border-0 font-14 text-dark">@Model.TotalSeniors</td>
                                            <td class="border-0 font-14 text-dark">@Model.TotalAdults</td>
                                            <td class="border-0 font-14 text-dark">@Model.TotalChildren</td>
                                        </tr><!--end tr-->
                                    </tbody>
                                </table><!--end table-->
                            </div>  <!--end /div-->
                        </div>  <!--end col-->
                    </div><!--end row-->
                    <hr>
                    <div class="row d-flex ">
                        <div class="col-lg-12">
                            <div class="float-end d-print-none mt-2 mt-md-0">
                                <a href="javascript:window.print()" class="btn btn-de-info btn-sm">Print</a>
                                <button type="button" onclick="tableToCSV()" class="btn btn-de-secondary btn-sm">
                                    Download
                                </button>
                                <a class="btn btn-de-danger btn-sm" asp-controller="Home" asp-action="Index">Cancel</a>
                            </div>
                        </div><!--end col-->
                    </div><!--end row-->
                </div>
            </div>
        </div>
    </div>
</div>